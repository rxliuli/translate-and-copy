{
  "name": "translate-and-copy",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "pack": "cross-env NODE_ENV=production run-p pack:*",
    "pack:zip": "rimraf extension.zip && jszip-cli add dist/ -o ./extension.zip",
    "pack:crx": "crx pack dist -o ./extension.crx",
    "pack:xpi": "cross-env WEB_EXT_ARTIFACTS_DIR=./ web-ext build --source-dir ./dist --filename extension.xpi --overwrite-dest",
    "start:chromium": "web-ext run --source-dir ./dist --target=chromium",
    "start:firefox": "web-ext run --source-dir ./dist --target=firefox-desktop"
  },
  "dependencies": {
    "@liuli-util/google-translate-api-free": "^0.2.0",
    "@vitalets/google-translate-api": "^9.0.0",
    "lodash-es": "^4.17.21",
    "preact": "^10.11.2",
    "webextension-polyfill": "^0.10.0"
  },
  "devDependencies": {
    "@ffflorian/jszip-cli": "^3.1.6",
    "@preact/preset-vite": "^2.4.0",
    "@types/firefox-webext-browser": "^94.0.1",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^18.11.17",
    "@types/webextension-polyfill": "^0.9.2",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.4",
    "unplugin-auto-import": "^0.12.1",
    "vite": "^3.2.0",
    "vite-plugin-chrome-extension": "^0.0.7",
    "web-ext": "^7.4.0"
  }
}
